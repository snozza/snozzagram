<% if @posts.any? %>
  <% @posts.each do |post| %>
    <h2> <%= image_tag post.image.url(:thumb) %> </h2>
    <p> <%= post.caption %> </p>
    <%= link_to 'Delete', post_path(post), method: :delete %>
    <ul class="comments">
      <% post.comments.each do |comment| %>
        <li><%= comment.body %></li>
      <% end %>
    </ul>  

    <%= form_for [post, Comment.new] do |f| %>
      <%= f.text_field :body %>
    <% end %>

  <% end %>
<% else %>
  No photos to show!
<% end %>

<p><a href='/posts/new'>Post Something</a><p>